<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragments.AddStreamingPlan">



    <ImageButton
        android:id="@+id/back_button_add_subscription"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_button"
        android:contentDescription="@string/back"
        app:tint="@color/background" />

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:textColor="@color/textHeading"
        android:text="Add Streaming Plan" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:layout_marginTop="20dp"
        app:boxBackgroundColor="@color/box"
        android:textColorHint="@color/textSub">

        <EditText
            android:id="@+id/planName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/plan_name"
            android:textAlignment="center"
            android:inputType="text"
            android:textColor="@color/textSub"
            android:required="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:layout_marginTop="10dp"
        app:boxBackgroundColor="@color/box"
        android:textColorHint="@color/textSub">

        <EditText
            android:id="@+id/planDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/plan_duration"
            android:textAlignment="center"
            android:inputType="number"
            android:textColor="@color/textSub"
            android:required="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:layout_marginTop="10dp"
        app:boxBackgroundColor="@color/box"
        android:textColorHint="@color/textSub">

        <EditText
            android:id="@+id/planPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/plan_price"
            android:textAlignment="center"
            android:inputType="numberDecimal"
            android:textColor="@color/textSub"
            android:required="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stream Category:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/streamCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/textSub"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Streaming Platform"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/streamingPlatform"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/textSub"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_plan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Add Plan"
        android:background="@drawable/rounded_button_bg"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textAllCaps="false"
        android:hapticFeedbackEnabled="true"
        android:textColor="@color/textHeading" />

</LinearLayout>
